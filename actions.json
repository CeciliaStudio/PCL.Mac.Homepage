{
    "openURL": {
        "desc": "使用浏览器打开 URL",
        "params": {
            "url": {
                "type": "string",
                "desc": "目标 URL"
            }
        }
    },
    "openFile": {
        "desc": "打开本地文件",
        "params": {
            "path": {
                "type": "string",
                "desc": "目标文件路径"
            },
            "showInParent": {
                "type": "bool",
                "desc": "是否在父文件夹中显示该文件，而不是打开该文件",
                "default": false
            }
        }
    },
    "switchInstance": {
        "desc": "切换当前实例",
        "params": {
            "id": {
                "type": "string",
                "desc": "目标实例 ID（约等于实例名）"
            }
        }
    },
    "showHint": {
        "desc": "显示提示",
        "params": {
            "content": {
                "type": "string",
                "desc": "提示文本"
            },
            "hintType": {
                "type": "info|finish|critical",
                "desc": "提示类型"
            }
        }
    },
    "launch": {
        "desc": "启动游戏",
        "params": {
            "instance": {
                "type": "string",
                "desc": "实例名"
            },
            "server": {
                "type": "string",
                "desc": "游戏启动后加入服务器",
                "default": "false"
            }
        }
    }
}